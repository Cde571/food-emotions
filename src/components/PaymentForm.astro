<form class="payment-form">
    <div class="form-group">
      <label for="card-holder-name">Card Holder Name</label>
      <input type="text" id="card-holder-name" placeholder="Enter your name" required />
    </div>
  
    <div class="form-group">
      <label for="card-number">Card Number</label>
      <input type="text" id="card-number" placeholder="1234 5678 9012 3456" required />
    </div>
  
    <div class="form-group">
      <label for="expiry-date">Expiry Date</label>
      <input type="month" id="expiry-date" required />
    </div>
  
    <div class="form-group">
      <label for="cvv">CVV</label>
      <input type="text" id="cvv" placeholder="123" required />
    </div>
  
    <div class="form-group">
      <label for="billing-address">Billing Address</label>
      <input type="text" id="billing-address" placeholder="Enter your billing address" required />
    </div>
  
    <div class="summary">
      <div class="summary-item">
        <span>Subscription:</span>
        <span>USD 29.00 per month</span>
      </div>
      <div class="summary-item">
        <span>Subtotal:</span>
        <span>USD 29.00</span>
      </div>
      <div class="summary-item">
        <span>Tax:</span>
        <span>USD 2.90</span>
      </div>
      <div class="summary-item total">
        <span>Total due today:</span>
        <span>USD 31.90</span>
      </div>
    </div>
  
    <button type="submit" class="subscribe-btn">Subscribe</button>
  </form>
  
  <style>
    .payment-form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
  
    .form-group {
      display: flex;
      flex-direction: column;
    }
  
    label {
      margin-bottom: 5px;
      font-weight: bold;
    }
  
    input {
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }
  
    .summary {
      background-color: #f2f2f2;
      padding: 15px;
      border-radius: 5px;
      margin-bottom: 15px;
    }
  
    .summary-item {
      display: flex;
      justify-content: space-between;
      margin-bottom: 5px;
      font-weight: bold;
    }
  
    .total {
      font-size: 1.2rem;
    }
  
    .subscribe-btn {
      background-color: #3B432B;
      color: white;
      padding: 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
    }
  </style>
  