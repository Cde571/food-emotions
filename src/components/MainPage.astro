---
import Profile from '../pages/Profile.astro';
import BotFunctions from '../components/BotFunctions.astro';
import QuickAccess from '../components/QuickAccess.astro';

const profileProps = {
    profilePic: 'path/to/profile.jpg',
    userName: 'Nombre del Usuario',
    status: 'Conectado',
    bio: 'Entusiasta de la IA y tecnología.',
    interactionHistory: 'Última interacción: 05 de Septiembre, 2024 - Consulta sobre "Cómo funciona BotFaceIA".',
    preferences: {
        interests: 'IA, tecnología, productividad',
        notifications: true,
        language: 'Español'
    }
};

const botFunctionsProps = {
    sections: [
        {
            image: 'path/to/overview.jpg',
            title: 'Overview',
            description: 'Una descripción general del bot y sus capacidades.'
        },
        {
            image: 'path/to/features.jpg',
            title: 'Features',
            description: 'Explicación de las funciones clave del bot.'
        },
        {
            image: 'path/to/how-it-works.jpg',
            title: 'How it Works',
            description: 'Guía sobre cómo utilizar el bot de manera efectiva.'
        }
    ]
};

const quickAccessProps = {
    quickAccessItems: [
        {
            title: 'Preguntas Frecuentes',
            description: 'Encuentra respuestas a las preguntas más comunes.'
        },
        {
            title: 'Comandos Rápidos',
            description: 'Accede a los comandos más utilizados rápidamente.'
        }
    ]
};
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BotFaceIA Main Page</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Agrega aquí estilos globales */
    </style>
</head>
<body>

<div class="container">
    <Profile {...profileProps} />
    <BotFunctions {...botFunctionsProps} />
    <QuickAccess {...quickAccessProps} />
</div>

</body>
</html>
