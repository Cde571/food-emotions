<script is:inline>
  // Botones
  window.scrollTestimonials = (amount) => {
    const c = document.getElementById("testimonialCarousel");
    c.scrollBy({ left: amount, behavior: "smooth" });
  };

  // Auto-scroll con pausa cuando el usuario pasa el mouse
  const carousel = document.getElementById("testimonialCarousel");
  let autoScroll = setInterval(() => {
    carousel.scrollBy({ left: 350, behavior: "smooth" });
  }, 4000);

  carousel.addEventListener("mouseenter", () => clearInterval(autoScroll));
  carousel.addEventListener("mouseleave", () => {
    autoScroll = setInterval(() => {
      carousel.scrollBy({ left: 350, behavior: "smooth" });
    }, 4000);
  });

  // Fondo de partÃ­culas muy suave
  const canvas = document.getElementById("particles-bg");
  const ctx = canvas.getContext("2d");

  function resizeCanvas() {
    canvas.width = canvas.offsetWidth;
    canvas.height = canvas.offsetHeight;
  }
  resizeCanvas();
  window.addEventListener("resize", resizeCanvas);

  const particles = Array.from({ length: 35 }, () => ({
    x: Math.random() * canvas.width,
    y: Math.random() * canvas.height,
    r: Math.random() * 2 + 1,
    vx: (Math.random() - 0.5) * 0.3,
    vy: (Math.random() - 0.5) * 0.3,
  }));

  function animateParticles() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    particles.forEach(p => {
      p.x += p.vx;
      p.y += p.vy;

      if (p.x < 0 || p.x > canvas.width) p.vx *= -1;
      if (p.y < 0 || p.y > canvas.height) p.vy *= -1;

      ctx.beginPath();
      ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
      ctx.fillStyle = "#ffffff55";
      ctx.fill();
    });

    requestAnimationFrame(animateParticles);
  }
  animateParticles();
</script>

