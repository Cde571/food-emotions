---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
  href?: string;
}
const { title, subtitle, href } = Astro.props;
---

<article
  class={`relative rounded-xl overflow-hidden group transition-shadow hover:shadow-2xl shadow-black/30 ${Astro.props.class}`}
>
  <a href={href} class="block w-full h-full relative">
    <slot name="image" />
    <div class="absolute z-10 inset-0 bg-gradient-to-b from-transparent via-black/20 to-black/80"></div>

    <div class="absolute bottom-0 z-20 p-6 text-white w-full">
      <h2 class="text-3xl font-bold mb-2 drop-shadow-lg">{title}</h2>
      {subtitle && <h3 class="text-xl font-medium text-white/80 drop-shadow">{subtitle}</h3>}
    </div>
  </a>
</article>
