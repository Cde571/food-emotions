---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
  href?: string;
}

const { title, subtitle, href } = Astro.props;
---

<article
  class={`relative rounded-2xl overflow-hidden group 
          transition-all duration-700 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)] 
          bg-white/10 backdrop-blur-md border border-white/10 
          ${Astro.props.class}`}
>
  <!-- Enlace opcional -->
  <a href={href || "#"} class="block w-full h-full relative">
    <!-- Imagen / Fondo dinÃ¡mico -->
    <slot name="image" />

    <!-- Degradado oscuro para contraste -->
    <div
      class="absolute z-10 inset-0 bg-gradient-to-b 
             from-transparent via-black/40 to-black/80"
    ></div>

    <!-- Contenido textual principal -->
    <div class="absolute bottom-0 z-20 p-6 text-white w-full">
      <h2 class="text-2xl font-bold mb-1 drop-shadow-lg">{title}</h2>
      {subtitle && (
        <h3 class="text-lg font-medium text-white/80 drop-shadow">
          {subtitle}
        </h3>
      )}

      <!-- Slot opcional para descripciones -->
      <slot name="content" />
    </div>

    <!-- Glow futurista -->
    <div
      class="absolute inset-0 bg-gradient-to-tr 
             from-purple-600/20 via-pink-500/10 to-transparent 
             opacity-0 group-hover:opacity-100 transition duration-700"
    ></div>
  </a>
</article>
