---
// Importa los componentes necesarios
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Features">
    <Header />
   
    <!-- Contenedor principal de la imagen y botones -->
    <div class="features-container">
        <h1 class=" items-center text-5xl text-white  mx-72 ">Características</h1> 
        <!-- Imagen de fondo -->
        <img src="/src/img/modelado1.png"  alt="Modelo" class="features-image mt-12" />
        
        <!-- Botones dinámicos -->
        <button class="feature-button feature-button-eye" data-target="eye-info">Eye</button>
        <button class="feature-button feature-button-mouth" data-target="mouth-info">Mouth</button>
        <button class="feature-button feature-button-forehead" data-target="forehead-info">Forehead</button>
        <button class="feature-button feature-button-foreja" data-target="forehead-info">Oreja</button>
        <button class="feature-button feature-button-noise" data-target="forehead-noise">Noise</button>
        
        <!-- Paneles de información -->
        <div id="eye-info" class="info-panel">Información sobre la característica "Eye".</div>
        <div id="mouth-info" class="info-panel">Información sobre la característica "Mouth".</div>
        <div id="forehead-info" class="info-panel">Información sobre la característica "Forehead".</div>
        <div id="foreja-info" class="info-panel">Información sobre la característica "Oreja".</div>        
        
    </div>
    
    <!-- Agrega tu CSS aquí o en un archivo separado -->
    <style>
        /* Textura de fondo para la página */
       /* Textura de fondo para la página */
    body {
        margin: 0;
        padding: 0;
        height: 100vh; /* Asegura que el body tenga al menos la altura de la ventana de visualización */
        background-image: url('/png');
        background-size: cover; /* Ajusta el tamaño de la textura para cubrir toda la pantalla */
        background-repeat: no-repeat; /* No repite la textura */
        background-attachment: fixed; /* Fija la textura en su lugar al hacer scroll */
    }


        .features-container {
            position: relative;
            width: 100%;
            max-width: 1000px; /* Ajusta el tamaño según sea necesario */
            margin: auto;
            margin-top: 255px;
        }

        .features-image {
            width: 100%;
            height: auto;
            display: block;
        }

        .feature-button {
            position: absolute;
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.3s, opacity 0.3s;
        }
        .feature-button-noise{
            top: 55%;
            left: 25%;
        }

        .feature-button-eye {
            top: 30%;
            left: 20%;
        }
        .feature-button-foreja {
            top: 50%;
            left: 70%;
            
        }

        .feature-button-mouth {
            top: 70%;
            left: 25%;
        }

        .feature-button-forehead {
            top: 10%;
            left: 50%;
        }

        .feature-button:hover {
            transform: scale(1.1);
            opacity: 0.9;
        }

        .info-panel {
            display: none;
            position: absolute;
            background-color: white;
            color: black;
            border: 1px solid #ccc;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 200px; /* Ajusta el tamaño según sea necesario */
            z-index: 10;
        }

        .info-panel.active {
            display: block;
        }
    </style>
    
    <!-- Agrega tu JavaScript aquí o en un archivo separado -->
    <script>
        document.querySelectorAll('.feature-button').forEach(button => {
            button.addEventListener('click', function() {
                // Cierra todos los paneles
                document.querySelectorAll('.info-panel').forEach(panel => {
                    panel.classList.remove('active');
                });
                
                // Muestra el panel correspondiente
                const targetId = this.getAttribute('data-target');
                document.getElementById(targetId).classList.add('active');
            });
        });
        
        // Cierra el panel al hacer clic fuera de él
        document.addEventListener('click', function(event) {
            if (!event.target.classList.contains('feature-button')) {
                document.querySelectorAll('.info-panel').forEach(panel => {
                    panel.classList.remove('active');
                });
            }
        });
    </script>
</Layout>
