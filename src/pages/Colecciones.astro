<script>
  let currentEditId = null;
  let allCollections = [];
  let currentCollectionId = null;
  let currentView = 'grid';
  let availableRecipes = [];

  // ============================================================
  // üîî Notificaciones Mejoradas
  // ============================================================
  function showNotification(message, type = 'success') {
    const notification = document.getElementById('notification');
    notification.textContent = message;
    notification.className = `notification ${type}`;
    notification.classList.remove('hidden');
    setTimeout(() => notification.classList.add('hidden'), 3500);
  }

  // ============================================================
  // üìä Cargar colecciones con animaci√≥n
  // ============================================================
  async function loadCollections() {
    try {
      const res = await fetch('http://localhost:3000/api/collections', {
        credentials: 'include',
      });

      if (!res.ok) throw new Error('Error al cargar colecciones');

      allCollections = await res.json();
      renderCollections();
      updateResultsCount(allCollections.length);
    } catch (err) {
      console.error('‚ùå Error:', err);
      document.getElementById('collections-grid').innerHTML = 
        '<div class="loading-container"><p style="color: #ef4444;">Error al cargar las colecciones</p></div>';
    }
  }

  // ============================================================
  // üìà Actualizar contador de resultados
  // ============================================================
  function updateResultsCount(count) {
    const counter = document.getElementById('results-count');
    if (count > 0) {
      counter.textContent = `${count} ${count === 1 ? 'colecci√≥n' : 'colecciones'}`;
      counter.style.display = 'block';
    } else {
      counter.style.display = 'none';
    }
  }

  // ============================================================
  // üé® Renderizar colecciones con animaciones escalonadas
  // ============================================================
  function renderCollections(collections = allCollections) {
    const container = document.getElementById('collections-grid');
    const emptyState = document.getElementById('empty-state');

    if (collections.length === 0) {
      container.classList.add('hidden');
      emptyState.classList.remove('hidden');
      updateResultsCount(0);
      return;
    }

    container.classList.remove('hidden');
    emptyState.classList.add('hidden');
    updateResultsCount(collections.length);

    container.className = `collections-grid ${currentView === 'list' ? 'list-view' : ''}`;

    container.innerHTML = collections.map((collection, index) => `
      <div class="collection-card" onclick="viewCollection('${collection._id}')" style="animation-delay: ${index * 0.1}s;">
        ${collection.coverImage ? 
          `<img src="${collection.coverImage}" alt="${collection.name}" class="collection-cover" />` :
          `<div class="collection-cover"></div>`
        }
        <span class="collection-badge ${collection.isPublic ? 'badge-public' : 'badge-private'}">
          ${collection.isPublic ? 'üåê P√∫blica' : 'üîí Privada'}
        </span>
        <div class="collection-card-content">
          <h3>${collection.name}</h3>
          <p class="collection-description">${collection.description || 'Sin descripci√≥n'}</p>
          
          <div class="collection-stats">
            <span>üìñ ${collection.recipeCount || 0} recetas</span>
            <span>üìÖ ${new Date(collection.createdAt).toLocaleDateString('es-ES', { day: 'numeric', month: 'short' })}</span>
          </div>
        </div>
      </div>
    `).join('');
  }

  // ============================================================
  // ‚úçÔ∏è Crear colecci√≥n
  // ============================================================
  document.getElementById('create-collection-btn')?.addEventListener('click', () => {
    currentEditId = null;
    document.getElementById('modal-title').textContent = 'Nueva Colecci√≥n';
    document.getElementById('collection-form').reset();
    document.getElementById('collection-cover-preview').classList.add('hidden');
    document.getElementById('submit-text').textContent = 'Crear Colecci√≥n';
    document.getElementById('desc-count').textContent = '0';
    document.getElementById('collectionModal').classList.remove('hidden');
  });

  // ============================================================
  // üìù Contador de caracteres
  // ============================================================
  document.getElementById('collection-description')?.addEventListener('input', (e) => {
    const count = e.target.value.length;
    document.getElementById('desc-count').textContent = count;
  });

  // ============================================================
  // üíæ Guardar colecci√≥n
  // ============================================================
  document.getElementById('collection-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();

    try {
      const data = {
        name: document.getElementById('collection-name').value.trim(),
        description: document.getElementById('collection-description').value.trim(),
        coverImage: document.getElementById('collection-cover').value.trim(),
        isPublic: document.getElementById('collection-public').checked,
      };

      const url = currentEditId 
        ? `http://localhost:3000/api/collections/${currentEditId}`
        : 'http://localhost:3000/api/collections';

      const res = await fetch(url, {
        method: currentEditId ? 'PUT' : 'POST',
        credentials: 'include',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (!res.ok) throw new Error('Error al guardar');

      showNotification(currentEditId ? '‚ú® Colecci√≥n actualizada exitosamente' : 'üéâ Colecci√≥n creada exitosamente');
      closeCollectionModal();
      await loadCollections();
    } catch (err) {
      console.error('‚ùå Error:', err);
      showNotification('Error al guardar colecci√≥n', 'error');
    }
  });

  // ============================================================
  // üëÅÔ∏è Ver colecci√≥n con recetas
  // ============================================================
  window.viewCollection = async function(id) {
    try {
      currentCollectionId = id;
      
      const res = await fetch(`http://localhost:3000/api/collections/${id}`, {
        credentials: 'include',
      });

      if (!res.ok) throw new Error('Error al cargar');

      const collection = await res.json();
      
      document.getElementById('collection-details').innerHTML = `
        ${collection.coverImage ? `<img src="${collection.coverImage}" alt="${collection.name}" style="width: 100%; max-height: 320px; object-fit: cover; border-radius: 16px; margin-bottom: 2rem; box-shadow: 0 8px 25px rgba(0,0,0,0.15);" />` : ''}
        <h1>${collection.name}</h1>
        <p style="color: #6b7280; font-size: 1.15rem; margin: 1rem 0; line-height: 1.6;">${collection.description || 'Sin descripci√≥n'}</p>
        <div style="display: flex; gap: 2rem; margin: 1.5rem 0; color: #9ca3af; font-weight: 600;">
          <span>üìñ ${collection.recipes?.length || 0} recetas</span>
          <span>${collection.isPublic ? 'üåê P√∫blica' : 'üîí Privada'}</span>
          <span>üìÖ ${new Date(collection.createdAt).toLocaleDateString('es-ES', { day: 'numeric', month: 'long', year: 'numeric' })}</span>
        </div>
      `;

      // Renderizar recetas
      const recipesContainer = document.getElementById('collection-recipes');
      if (collection.recipes && collection.recipes.length > 0) {
        recipesContainer.innerHTML = collection.recipes.map((recipe, index) => `
          <div class="recipe-card" style="animation-delay: ${index * 0.08}s;">
            <button class="remove-recipe-btn" onclick="removeRecipeFromCollection('${collection._id}', '${recipe._id}')" title="Quitar de la colecci√≥n">
              √ó
            </button>
            ${recipe.image ? 
              `<img src="${recipe.image}" alt="${recipe.name}" class="recipe-image" />` :
              `<div class="recipe-image"></div>`
            }
            <div class="recipe-content">
              <h4>${recipe.name}</h4>
              <p>${recipe.description || 'Sin descripci√≥n'}</p>
            </div>
          </div>
        `).join('');
      } else {
        recipesContainer.innerHTML = `
          <div style="text-align: center; padding: 3rem; grid-column: 1 / -1;">
            <div style="font-size: 3rem; margin-bottom: 1rem;">üçΩÔ∏è</div>
            <p style="color: #9ca3af; font-size: 1.1rem;">No hay recetas en esta colecci√≥n a√∫n</p>
            <p style="color: #d1d5db; font-size: 0.95rem; margin-top: 0.5rem;">Agrega recetas para comenzar</p>
          </div>
        `;
      }

      // Event listeners para botones
      document.getElementById('add-recipe-btn').onclick = () => openAddRecipeModal(id);
      document.getElementById('edit-collection-btn').onclick = () => editCollection(id);
      document.getElementById('delete-collection-btn').onclick = () => deleteCollection(id);

      document.getElementById('viewCollectionModal').classList.remove('hidden');
    } catch (err) {
      console.error('‚ùå Error:', err);
      showNotification('Error al cargar colecci√≥n', 'error');
    }
  };

  // ============================================================
  // ‚úèÔ∏è Editar colecci√≥n
  // ============================================================
  window.editCollection = async function(id) {
    try {
      const collection = allCollections.find(c => c._id === id);
      if (!collection) return;

      currentEditId = id;
      document.getElementById('modal-title').textContent = 'Editar Colecci√≥n';
      document.getElementById('collection-name').value = collection.name;
      document.getElementById('collection-description').value = collection.description || '';
      document.getElementById('collection-cover').value = collection.coverImage || '';
      document.getElementById('collection-public').checked = collection.isPublic;
      document.getElementById('submit-text').textContent = 'Actualizar Colecci√≥n';
      document.getElementById('desc-count').textContent = (collection.description || '').length;

      if (collection.coverImage) {
        document.getElementById('collection-cover-img').src = collection.coverImage;
        document.getElementById('collection-cover-preview').classList.remove('hidden');
      }

      closeViewCollectionModal();
      document.getElementById('collectionModal').classList.remove('hidden');
    } catch (err) {
      console.error('‚ùå Error:', err);
    }
  };

  // ============================================================
  // üóëÔ∏è Eliminar colecci√≥n
  // ============================================================
  window.deleteCollection = async function(id) {
    if (!confirm('¬øEst√°s seguro de eliminar esta colecci√≥n? Esta acci√≥n no se puede deshacer.')) return;

    try {
      const res = await fetch(`http://localhost:3000/api/collections/${id}`, {
        method: 'DELETE',
        credentials: 'include',
      });

      if (!res.ok) throw new Error('Error al eliminar');

      showNotification('üóëÔ∏è Colecci√≥n eliminada exitosamente');
      closeViewCollectionModal();
      await loadCollections();
    } catch (err) {
      console.error('‚ùå Error:', err);
      showNotification('Error al eliminar colecci√≥n', 'error');
    }
  };

  // ============================================================
  // ‚ûï Abrir modal agregar receta
  // ============================================================
  window.openAddRecipeModal = async function (collectionId) {
    currentCollectionId = collectionId;

    try {
      const res = await fetch('http://localhost:3000/api/recipes', {
        credentials: 'include',
      });

      if (!res.ok) throw new Error('Error al cargar recetas');

      availableRecipes = await res.json();
      renderAvailableRecipes(availableRecipes);

      document.getElementById('addRecipeModal').classList.remove('hidden');
    } catch (err) {
      console.error('‚ùå Error:', err);
      showNotification('No se pudieron cargar las recetas', 'error');
    }
  };

  // ============================================================
  // üîç Buscar recetas en modal
  // ============================================================
  document.getElementById('recipe-search')?.addEventListener('input', (e) => {
    const term = e.target.value.toLowerCase();
    const filtered = availableRecipes.filter(r =>
      r.name.toLowerCase().includes(term) ||
      (r.description && r.description.toLowerCase().includes(term))
    );
    renderAvailableRecipes(filtered);
  });

  // ============================================================
  // üé® Renderizar recetas disponibles
  // ============================================================
  function renderAvailableRecipes(recipes) {
    const container = document.getElementById('available-recipes');

    if (!recipes.length) {
      container.innerHTML = `
        <div style="text-align:center; padding: 3rem;">
          <div style="font-size: 3rem; margin-bottom: 1rem;">üîç</div>
          <p style="color:#9ca3af; font-size: 1.1rem;">No hay recetas que coincidan</p>
        </div>
      `;
      return;
    }

    container.innerHTML = recipes
      .map((r, index) => `
        <div class="available-recipe-item" onclick="addRecipeToCollection('${r._id}')" style="animation-delay: ${index * 0.05}s;">
          ${r.image ? 
            `<img src="${r.image}" alt="${r.name}" />` : 
            `<div style="width: 70px; height: 70px; background: linear-gradient(135deg, #ffa726 0%, #fb8c00 100%); border-radius: 12px; flex-shrink: 0;"></div>`
          }
          <div class="available-recipe-info">
            <h4>${r.name}</h4>
            <p>${r.description || 'Sin descripci√≥n'}</p>
          </div>
        </div>
      `
      )
      .join('');
  }

  // ============================================================
  // ‚ûï Agregar receta a colecci√≥n
  // ============================================================
  window.addRecipeToCollection = async function (recipeId) {
    try {
      const res = await fetch(
        `http://localhost:3000/api/collections/${currentCollectionId}/recipes`,
        {
          method: 'POST',
          credentials: 'include',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ recipeId }),
        }
      );

      if (!res.ok) throw new Error('Error al agregar receta');

      showNotification('‚ú® Receta agregada a la colecci√≥n');
      closeAddRecipeModal();
      await viewCollection(currentCollectionId);
    } catch (err) {
      console.error('‚ùå Error:', err);
      showNotification('Error al agregar receta', 'error');
    }
  };

  // ============================================================
  // ‚ùå Quitar receta de colecci√≥n
  // ============================================================
  window.removeRecipeFromCollection = async function (collectionId, recipeId) {
    if (!confirm('¬øQuitar esta receta de la colecci√≥n?')) return;

    try {
      const res = await fetch(
        `http://localhost:3000/api/collections/${collectionId}/recipes/${recipeId}`,
        {
          method: 'DELETE',
          credentials: 'include',
        }
      );

      if (!res.ok) throw new Error('Error al quitar receta');

      showNotification('Receta eliminada de la colecci√≥n');
      await viewCollection(collectionId);
    } catch (err) {
      console.error('‚ùå Error:', err);
      showNotification('Error al quitar receta', 'error');
    }
  };

  // ============================================================
  // üîç Buscar colecciones
  // ============================================================
  document.getElementById('collections-search')?.addEventListener('input', (e) => {
    const value = e.target.value.toLowerCase();
    const filtered = allCollections.filter(c =>
      c.name.toLowerCase().includes(value) ||
      (c.description && c.description.toLowerCase().includes(value))
    );
    renderCollections(filtered);
  });

  // ============================================================
  // üîÅ Cambiar vista grid/list
  // ============================================================
  document.querySelectorAll('.view-btn')?.forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.view-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      currentView = btn.dataset.view;
      renderCollections();
    });
  });

  // ============================================================
  // üëÅÔ∏è Vista previa de imagen de colecci√≥n
  // ============================================================
  document.getElementById('preview-collection-btn')?.addEventListener('click', () => {
    const url = document.getElementById('collection-cover').value.trim();
    const preview = document.getElementById('collection-cover-preview');

    if (!url) {
      preview.classList.add('hidden');
      return;
    }

    document.getElementById('collection-cover-img').src = url;
    document.getElementById('collection-cover-img').onerror = () => {
      showNotification('No se pudo cargar la imagen', 'error');
      preview.classList.add('hidden');
    };
    document.getElementById('collection-cover-img').onload = () => {
      preview.classList.remove('hidden');
    };
  });

  // ============================================================
  // üóëÔ∏è Remover vista previa
  // ============================================================
  window.removePreview = function() {
    document.getElementById('collection-cover').value = '';
    document.getElementById('collection-cover-preview').classList.add('hidden');
  };

  // ============================================================
  // ‚ùå Cerrar modales
  // ============================================================
  function closeCollectionModal() {
    document.getElementById('collectionModal').classList.add('hidden');
  }

  function closeViewCollectionModal() {
    document.getElementById('viewCollectionModal').classList.add('hidden');
  }

  function closeAddRecipeModal() {
    document.getElementById('addRecipeModal').classList.add('hidden');
  }

  // ============================================================
  // ‚å®Ô∏è Cerrar modales con tecla ESC
  // ============================================================
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      const modals = document.querySelectorAll('.modal:not(.hidden)');
      modals.forEach(modal => modal.classList.add('hidden'));
    }
  });

  // ============================================================
  // üöÄ Iniciar carga de colecciones al abrir la p√°gina
  // ============================================================
  loadCollections();
</script>
