---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us">
  <Header />

  <section class="contact-container">
    <h1 class="contact-title">Contact US</h1>
    <p class="contact-subtitle">
      Have questions or want to learn more about Food Emotions? Fill out the form below, and we'll be in touch shortly.
    </p>
    <form class="contact-form">
      <input type="text" placeholder="Name" class="form-input" required />
      <input type="email" placeholder="Email" class="form-input" required />
      <textarea placeholder="Message" class="form-textarea" required></textarea>
      <button type="submit" class="form-button">Send Message</button>
    </form>
  </section>
</Layout>

<style>

.contact-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 3rem;
    background-color: #647d4b; /* color de fondo similar al de la imagen */
  }
  
  .contact-title {
    font-size: 3rem;
    color: white;
    margin-bottom: 1rem;
  }
  
  .contact-subtitle {
    font-size: 1.25rem;
    color: white;
    text-align: center;
    max-width: 600px;
    margin-bottom: 2rem;
  }
  
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: 400px;
  }
  
  .form-input, .form-textarea {
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
    font-size: 1rem;
    width: 100%;
    box-sizing: border-box;
  }
  
  .form-textarea {
    resize: none;
    height: 150px;
  }
  
  .form-button {
    padding: 1rem;
    background-color: #3b82f6;
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.25rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  .form-button:hover {
    background-color: #2563eb;
  }
  
</style>