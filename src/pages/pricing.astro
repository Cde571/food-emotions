---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pricing">
  <section class="pricing-container mt-36">
    <h1 class="title">Choose Your Plan</h1>
    <div class="pricing-cards">
      <div class="card">
        <h2 class="plan-name">Starter</h2>
        <p class="price">USD 9.00<span>/mo</span></p>
        <p class="features">• Access to basic features<br />• Monthly support</p>
        <button class="select-plan-btn" onclick="selectPlan('Starter', 9)">Select Starter</button>
      </div>
      
      <div class="card">
        <h2 class="plan-name">Professional</h2>
        <p class="price">USD 29.00<span>/mo</span></p>
        <p class="features">• All Starter features<br />• Advanced analytics<br />• Monthly support</p>
        <button class="select-plan-btn" onclick="selectPlan('Professional', 29)">Select Professional</button>
      </div>

      <div class="card">
        <h2 class="plan-name">Enterprise</h2>
        <p class="price">Contact us</p>
        <p class="features">• All Professional features<br />• Dedicated account manager<br />• Custom solutions</p>
        <button class="select-plan-btn" onclick="selectPlan('Enterprise')">Contact Sales</button>
      </div>
    </div>
  </section>

  <section id="selected-plan-details" class="plan-details hidden">
    <h2>Selected Plan: <span id="selected-plan"></span></h2>
    <p>Price: USD <span id="plan-price"></span>/mo</p>
    <a href="/payment" class="proceed-btn">Proceed to Payment</a>
  </section>
</Layout>

<style>
  .pricing-container {
    text-align: center;
    padding: 20px;
    background-color: #3B432B;
    color: #ffffff;
    border-radius: 10px;
  }

  .title {
    font-size: 2rem;
    margin-bottom: 20px;
  }

  .pricing-cards {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-top: 20px;
  }

  .card {
    background: #ffffff;
    padding: 20px;
    border-radius: 10px;
    text-align: left;
    color: #333;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    flex: 1;
    max-width: 300px;
  }

  .plan-name {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }

  .price {
    font-size: 1.8rem;
    margin: 10px 0;
    font-weight: bold;
  }

  .features {
    margin-bottom: 20px;
    font-size: 0.9rem;
  }

  .select-plan-btn {
    background-color: #3B432B;
    color: #ffffff;
    padding: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    width: 100%;
  }

  .select-plan-btn:hover {
    background-color: #2f3725;
  }

  .plan-details {
    margin-top: 30px;
    background: #f2f2f2;
    padding: 20px;
    border-radius: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .hidden {
    display: none;
  }

  .proceed-btn {
    background-color: #3B432B;
    color: #ffffff;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    margin-top: 10px;
  }

  .proceed-btn:hover {
    background-color: #2f3725;
  }
</style>

<script>
  function selectPlan(planName, price) {
    const selectedPlanElement = document.getElementById('selected-plan');
    const planPriceElement = document.getElementById('plan-price');
    const selectedPlanDetailsElement = document.getElementById('selected-plan-details');

    if (selectedPlanElement && planPriceElement && selectedPlanDetailsElement) {
      selectedPlanElement.textContent = planName;
      planPriceElement.textContent = price ? price.toFixed(2) : 'Contact for pricing';
      selectedPlanDetailsElement.classList.remove('hidden');
    }
  }
</script>
