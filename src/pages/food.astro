            <p class="recipe-description">{recipe.description}</p>
            <div class="recipe-meta">
              <span>üïí {recipe.time}</span>
              <span>üçΩÔ∏è {recipe.servings}</span>
              <span>üåç {recipe.origin}</span>
            </div>
          </div>
        </div>
      ))}
    </div>

    {recipes.map(recipe => (
      <div id={recipe.id} class="modal">
