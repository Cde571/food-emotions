---
import ProfileCard from '../components/ProfileCard.astro'; 
import BlogCard from '../components/BlogCard.astro'; 
import ProfilePic from '../components/ProfilePic.astro';
---

<style>
  :global(body) {
    font-family: Arial, sans-serif;
    margin: 0;
    background-color: #e8f5e9; 
  }

  .container {
    display: flex;
    height: 100vh;
  }

  .sidebar {
    width: 20%;
    background-color: #e8f5e9; 
    color: #040303;
    padding: 1rem;
  }

  .main-content {
    flex-grow: 1;
    padding: 1rem;
  }

  .search-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .search-bar input {
    width: 70%;
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .tabs {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .tabs span {
    cursor: pointer;
    padding: 0.5rem 1rem;
    background-color: #a5d6a7; /* Verde suave */
    border-radius: 5px;
  }

  .tabs span.active {
    background-color: #4caf50; 
    color: #fff;
  }

  .recipes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }
</style>

<div class="container">
  <!-- Barra lateral -->
  <div class="sidebar">
    <ProfilePic/>
    <ProfileCard
      name="Elena Reygadas"
      username="@elena_reyg_20"
      notifications="107"
      messages="15"
      followers="240"
    />
    <!-- Logo -->
    <div class="logo">
      <img src="/src/img/logo_saludable.png" alt="Logo" />
    </div>
  </div>

  <!-- Contenido principal -->
  <div class="main-content">
    <!-- Barra de bÃºsqueda -->
    <div class="search-bar">
      <div class="tabs">
        <span class="active">For you</span>
        <span>Following</span>
      </div>
      <input type="text" placeholder="What are you looking for?" />
    </div>

    <!-- Recetas -->
    <div class="recipes-grid">
      <BlogCard
        author="steveh.cook"
        title="Quinoa and vegetable salad"
        description="My favorite breakfast"
        time="Just now"
        image="/src/img/quinoa_salad.jpg"
        profilePic="/src/img/perfil6.png" 
      />
      <BlogCard
        author="cocinaencasa"
        title="Spinach and avocado smoothie"
        description="This smoothie will help you lose weight"
        time="5 minutes ago"
        image="/src/img/spinach_avocado_smoothie.jpg"
        profilePic="/src/img/perfil3.jpg" 
      />
      <BlogCard
        author="juliananavarro1999"
        title="Zucchini cream"
        description="This cream is good and easy to make"
        time="2 hours ago"
        image="/src/img/crema-de-calabaza.jpg"
        profilePic="/src/img/perfil2.jpg" 
      />
      <BlogCard
        author="cake.shop"
        title="Orange chicken"
        description="Eggplant stuffed with vegetables (turkish style)"
        time="Yesterday"
        image="/src/img/pollo-a-la-naranja.jpg"
        profilePic="/src/img/perfil5.png" 
      />
      <BlogCard
        author="elena_reyg_20"
        title="Rice with almond milk"
        description="This type of rice will be a good dessert for the afternoons"
        time="Yesterday"
        image="/src/img/arroz_leche_almendra.jpg"
        profilePic="/src/img/elena_profile.jpg" 
      />
      <BlogCard
        author="_sofia_"
        title="Chicken and black bean salsa burritos"
