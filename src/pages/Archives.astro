  <!-- Script para manejar localStorage -->
  <script>
    // ========================================
    // SISTEMA DE ALMACENAMIENTO LOCAL
    // ========================================

    const STORAGE_KEY = 'foodemotions_recipes';
    let currentZoneId = null;

    // Inicializar localStorage con datos de ejemplo si est√° vac√≠o
    function initializeStorage() {
      const existing = localStorage.getItem(STORAGE_KEY);
      if (!existing) {
        const initialData = {};
        window.KITCHEN_ZONES_DATA.forEach(zone => {
          initialData[zone.id] = zone.examples || [];
        });
        localStorage.setItem(STORAGE_KEY, JSON.stringify(initialData));
      }
    }

    // Obtener todas las recetas
    function getAllRecipes() {
      const data = localStorage.getItem(STORAGE_KEY);
      return data ? JSON.parse(data) : {};
    }

    // Obtener recetas de una zona espec√≠fica
    function getRecipesByZone(zoneId) {
      const allRecipes = getAllRecipes();
      return allRecipes[zoneId] || [];
    }

    // Guardar receta en una zona
    function saveRecipe(zoneId, recipe) {
      const allRecipes = getAllRecipes();
      if (!allRecipes[zoneId]) {
        allRecipes[zoneId] = [];
      }
      
      recipe.id = `rec_${Date.now()}`;
      recipe.savedDate = new Date().toISOString().split('T')[0];
      
      allRecipes[zoneId].push(recipe);
      localStorage.setItem(STORAGE_KEY, JSON.stringify(allRecipes));
      
      return recipe;
    }

    // Eliminar receta
    function deleteRecipe(zoneId, recipeId) {
      const allRecipes = getAllRecipes();
      if (allRecipes[zoneId]) {
        allRecipes[zoneId] = allRecipes[zoneId].filter(r => r.id !== recipeId);
        localStorage.setItem(STORAGE_KEY, JSON.stringify(allRecipes));
      }
    }

    // Contar recetas por zona
    function countRecipesByZone(zoneId) {
      const recipes = getRecipesByZone(zoneId);
      return recipes.length;
    }

    // Contar recetas recientes (√∫ltima semana)
    function countRecentRecipes(zoneId) {
      const recipes = getRecipesByZone(zoneId);
      const weekAgo = new Date();
      weekAgo.setDate(weekAgo.getDate() - 7);
      
      return recipes.filter(r => {
        const recipeDate = new Date(r.savedDate);
        return recipeDate >= weekAgo;
      }).length;
    }

    // Actualizar contadores en la UI
    function updateCounters() {
      window.KITCHEN_ZONES_DATA.forEach(zone => {
        const count = countRecipesByZone(zone.id);
        const countElement = document.querySelector(`[data-zone-count="${zone.id}"]`);
        if (countElement) {
          countElement.textContent = count;
        }
      });
    }

    // Mostrar recetas en el modal
    function displayRecipesInModal(zoneId) {
      const recipes = getRecipesByZone(zoneId);
      const container = document.getElementById('recipes-preview');
      
      if (recipes.length === 0) {
        container.innerHTML = `
          <div style="text-align: center; padding: 30px; color: rgba(232, 255, 227, 0.6);">
            <p style="font-size: 3rem; margin-bottom: 10px;">üçΩÔ∏è</p>
            <p>A√∫n no hay recetas en esta zona</p>
            <p style="font-size: 0.85rem; margin-top: 8px;">¬°Agrega tu primera receta emocional!</p>
          </div>
        `;
        return;
      }

      container.innerHTML = recipes.map(recipe => `
        <div class="recipe-item" data-recipe-id="${recipe.id}">
          <h4>${recipe.title}</h4>
          <div class="recipe-meta">
            <span class="recipe-tag">${recipe.emotion}</span>
            ${recipe.tags ? recipe.tags.split(',').map(tag => 
              `<span class="recipe-tag">${tag.trim()}</span>`
            ).join('') : ''}
          </div>
          <p class="recipe-notes">${recipe.notes || 'Sin notas'}</p>
          <p class="recipe-date">Guardada el ${new Date(recipe.savedDate).toLocaleDateString('es-ES', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}</p>
        </div>
      `).join('');
    }

    // Modal de agregar receta
    function openAddRecipeModal(zoneId) {
      currentZoneId = zoneId;
      const zone = window.KITCHEN_ZONES_DATA.find(z => z.id === zoneId);
      document.getElementById('target-zone-name').textContent = zone.name;
      document.getElementById('add-recipe-modal').classList.add('active');
    }

    // Manejar formulario
    document.getElementById('recipe-form')?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const recipe = {
        title: document.getElementById('recipe-title').value,
        emotion: document.getElementById('recipe-emotion').value,
        tags: document.getElementById('recipe-tags').value,
        notes: document.getElementById('recipe-notes').value
      };

      saveRecipe(currentZoneId, recipe);
      
      // Limpiar formulario
      e.target.reset();
      
      // Cerrar modal
      document.getElementById('add-recipe-modal').classList.remove('active');
      
      // Actualizar contadores
      updateCounters();
      
      // Mostrar notificaci√≥n
      alert('¬°Receta guardada exitosamente! üéâ');
      
      // Si el modal de zona est√° abierto, actualizar
      if (document.getElementById('zone-modal').classList.contains('active')) {
        displayRecipesInModal(currentZoneId);
        document.getElementById('modal-count').textContent = countRecipesByZone(currentZoneId);
        document.getElementById('modal-recent').textContent = countRecentRecipes(currentZoneId);
      }
    });

    // Botones de modal
    document.getElementById('add-recipe-btn')?.addEventListener('click', () => {
      const zoneId = window.KITCHEN_ZONES_DATA[window.currentZoneIndex || 0].id;
      openAddRecipeModal(zoneId);
    });

    document.getElementById('close-add-recipe')?.addEventListener('click', () => {
      document.getElementById('add-recipe-modal').classList.remove('active');
    });

    document.getElementById('add-recipe-backdrop')?.addEventListener('click', () => {
      document.getElementById('add-recipe-modal').classList.remove('active');
    });

    document.getElementById('manage-recipes-btn')?.addEventListener('click', () => {
      // Aqu√≠ podr√≠as redirigir a una p√°gina de gesti√≥n completa
      alert('Funci√≥n de gesti√≥n en desarrollo. Por ahora puedes ver y agregar recetas desde aqu√≠.');
    });

    // Inicializar cuando cargue la p√°gina
    document.addEventListener('DOMContentLoaded', () => {
      initializeStorage();
      updateCounters();
    });

    // Exponer funciones globalmente para que kitchen-3d-realistic.js las use
    window.FoodEmotionsStorage = {
      getAllRecipes,
      getRecipesByZone,
      saveRecipe,
      deleteRecipe,
      countRecipesByZone,
      countRecentRecipes,
      displayRecipesInModal,
      openAddRecipeModal,
      updateCounters
    };
  </script>
