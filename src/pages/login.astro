---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Sign Up Success">

  <style>
    .success-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      padding: 20px;
      background-color: #687450;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
      color: #28a745;
      margin-bottom: 10px;
    }

    p {
      color: #333;
      font-size: 1.1rem;
      margin-bottom: 20px;
    }

    #redirectMessage {
      margin-top: 10px;
      color: #555;
      font-style: italic;
    }

    button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #0056b3;
    }
  </style>

  <div class="success-container">
    <h1>ðŸŽ‰ Registration successful!</h1>
    <p>Your account has been created successfully.</p>

    <button id="redirectButton">Go to Login</button>

    <p id="redirectMessage">You will be redirected to login in a few seconds...</p>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const redirectButton = document.getElementById("redirectButton");
      const redirectMessage = document.getElementById("redirectMessage");

      // Cambiado a la pÃ¡gina de login
      const loginUrl = "/login"; // O la ruta que uses para tu login

      // Redirige automÃ¡ticamente despuÃ©s de 4 segundos
      setTimeout(() => {
        window.location.href = loginUrl;
      }, 4000);

      // Permitir al usuario ir manualmente
      redirectButton.addEventListener("click", () => {
        window.location.href = loginUrl;
      });
    });
  </script>

</Layout>
