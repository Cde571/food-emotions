// Importar el diseÃ±o del blog
import BlogLayout from '../../layouts/BlogLayout.astro';

const { slug } = Astro.params;

// Intentar cargar el archivo Markdown con el slug especificado
const post = await import(`../../content/posts/${slug}.md`).catch(() => null);

// Verificar si el post existe; si no, mostrar un error o redirigir
if (!post) {
  throw new Error(`Post not found for slug: ${slug}`);
}

const { frontmatter, Content } = post;
---

<BlogLayout title={frontmatter.title} date={frontmatter.date}>
  <Content />
</BlogLayout>
