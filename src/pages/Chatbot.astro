---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Chatbot">
  <section class="chatbot-section">
    <div class="chat-container">
      <div class="bot-face">
        <img src="/img/chatbot.png" alt="Roy Bot" class="bot-image" />
        <h1>Hola, soy <span class="highlight">Roy</span> ü§ñ</h1>
        <p>Tu asistente emocional y saludable.  
        Cu√©ntame c√≥mo te sientes hoy y te ayudar√© con recomendaciones personalizadas.</p>
      </div>

      <div class="chat-interface">
        <div id="chat-box" class="chat-box"></div>

        <div class="chat-input-container">
          <input id="chat-input" type="text" placeholder="Escribe c√≥mo te sientes..." />
          <button id="send-btn">Enviar</button>
        </div>
      </div>
    </div>
  </section>

  <script is:inline>
    const chatBox = document.getElementById("chat-box");
    const input = document.getElementById("chat-input");
    const btn = document.getElementById("send-btn");

    async function sendMessage() {
      const text = input.value.trim();
      if (!text) return;

      // Mostrar mensaje del usuario
      const userMsg = document.createElement("div");
      userMsg.className = "message user";
      userMsg.textContent = text;
      chatBox.appendChild(userMsg);
      input.value = "";

      // Mostrar mensaje temporal del bot
      const botMsg = document.createElement("div");
      botMsg.className = "message bot";
      botMsg.textContent = "Roy est√° procesando tu emoci√≥n... üí≠";
      chatBox.appendChild(botMsg);
      chatBox.scrollTop = chatBox.scrollHeight;

      try {
        const res = await fetch("http://localhost:3000/api/chat", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ message: text }),
        });

        const data = await res.json();

        // Reemplazar el texto del bot con la respuesta real
        botMsg.textContent = data.reply || "No pude entender eso, ¬øpuedes repetirlo?";
      } catch (error) {
        botMsg.textContent = "‚ùå Error al conectar con Roy.";
        console.error(error);
      }

      chatBox.scrollTop = chatBox.scrollHeight;
    }

    btn.addEventListener("click", sendMessage);
    input.addEventListener("keydown", (e) => {
      if (e.key === "Enter") sendMessage();
    });
  </script>

  <style>
    .chatbot-section {
      background: linear-gradient(135deg, #0d0d0d, #1e1e1e);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 3rem;
      color: white;
    }

    .chat-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      background: rgba(255,255,255,0.05);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 2rem;
      width: 100%;
      max-width: 800px;
      box-shadow: 0 0 20px rgba(114,179,64,0.4);
    }

    .bot-face {
      text-align: center;
      margin-bottom: 2rem;
    }

    .bot-image {
      width: 120px;
      border-radius: 50%;
      border: 3px solid #72b340;
      box-shadow: 0 0 20px #72b340;
    }

    .highlight {
      color: #72b340;
    }

    .chat-interface {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .chat-box {
      background: rgba(255,255,255,0.08);
      border-radius: 10px;
      padding: 1rem;
      height: 300px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
    }

    .message {
      padding: 10px 15px;
      border-radius: 12px;
      margin-bottom: 8px;
      max-width: 80%;
      word-wrap: break-word;
    }

    .message.user {
      background: #72b340;
      align-self: flex-end;
      color: #000;
      box-shadow: 0 0 10px #72b34077;
    }

    .message.bot {
      background: #2b2b2b;
      color: #fff;
      align-self: flex-start;
      box-shadow: 0 0 10px #00000055;
    }

    .chat-input-container {
      display: flex;
      gap: 10px;
    }

    #chat-input {
      flex: 1;
      padding: 10px;
      border-radius: 10px;
      border: none;
      background: rgba(255,255,255,0.1);
      color: white;
      outline: none;
    }

    #send-btn {
      background-color: #72b340;
      border: none;
      color: black;
      padding: 10px 20px;
      border-radius: 10px;
      cursor: pointer;
      font-weight: bold;
      transition: transform 0.2s ease;
    }

    #send-btn:hover {
      background-color: #5fa62a;
      transform: scale(1.05);
    }
  </style>
</Layout>
