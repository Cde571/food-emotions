---
import Layout from '../layouts/Layout.astro';
import ProfilePic from '../components/ProfilePic.astro'; // Componente para la foto de perfil
import PopularCollections from '../components/PopularCollections.astro'; // Componente para las colecciones populares
import Bibliography from '../components/Bibliography.astro'; // Componente para la bibliografía y habilidades

const activeSection = 'profile'; // Cambia este valor a 'home' o 'options' según la sección activa
---

<Layout title="Profile">
  <div class="profile-container">
    <!-- Sección Izquierda -->
    <div class="left-section">
      <ProfilePic src="src/img/Image (4).png" alt="Jenna Ortega" />
      <div class="user-info">
        <h2>Jenna Ortega</h2>
        <p class="user-title">Student</p>
        <div class="user-stats">
          <p>42 Recipes</p>
          <p>1302 Followers</p>
          <p>18K Likes</p>
        </div>
        <div class="user-links">
          <a href="#">Blog</a>
          <a href="#">Archives</a>
          <a href="#">Collections</a>
        </div>
      </div>
    </div>
    
    <!-- Sección Principal -->
    <div class="main-section">
      <input type="text" placeholder="Buscar" class="search-input" />
      <div class="banner">
        <img src="src/img/1.png" alt="Banner" class="banner-image" />
      </div>
      <PopularCollections />
      <div class="team-info">
        <h3>Jenna appears in this team</h3>
        <div class="team-card">
          <h4>ROYAL UI FORCE</h4>
          <p>Formed in 2013</p>
          <button>Follow</button>
          <p>JENNA IS A MEMBER SINCE NOV, 2014</p>
        </div>
      </div>
    </div>

    <!-- Sección Derecha -->
    <div class="right-section">
      <Bibliography 
        description="Lorem ipsum dolor sit amet consectetur adipiscing elit..."
        website="https://youtube.com/cdecp"
        skills={["Photoshop", "Cocina", "Musica", "Jugar"]}
      />
    </div>
  </div>
</Layout>

<script>
  function navigateTo(section) {
    // Redirige a la sección correspondiente. Este código se debería adaptar a tu lógica de navegación.
    console.log(`Navigating to ${section}`);
    
  }
  let activeSection: 'profile' | 'options' = 'profile';
  
  
  function setActiveSection(section: 'profile' | 'options') {
    activeSection = section;
  }
  
  
</script>

<style>
.profile-container {
  display: grid;
  grid-template-columns: 1fr 2fr 1fr; /* Sección izquierda, principal y derecha */
  gap: 20px;
  padding: 20px;
  max-width: 1200px;
  margin: auto;
}

.left-section, .right-section {
  background-color: #3B432B; /* Fondo verde oscuro */
  padding: 20px;
  color: white;
  border-radius: 10px;
}

.main-section {
  padding: 20px;
}

.user-info h2 {
  font-size: 1.5rem;
  margin-top: 10px;
}

.user-stats p {
  margin: 5px 0;
}

.user-links a {
  display: block;
  color: white;
  text-decoration: none;
  margin-top: 10px;
}

.search-input {
  width: 100%;
  padding: 10px;
  margin-bottom: 20px;
  border-radius: 10px;
  border: none;
}

.banner-image {
  width: 100%;
  height: auto;
  border-radius: 10px;
}

.team-card {
  background-color: white;
  color: #831400;
  padding: 10px;
  border-radius: 10px;
  text-align: center;
  margin-top: 20px;
}

.team-card button {
  background-color: #72B340;
  color: white;
  border: none;
  padding: 10px;
  border-radius: 10px;
  cursor: pointer;
  margin-top: 10px;
}

.right-section {
  display: flex;
  flex-direction: column;
}

.skills-container {
  margin-top: 20px;
}

.skill {
  background-color: #555;
  color: white;
  padding: 10px;
  margin-right: 10px;
  margin-bottom: 10px;
  display: inline-block;
  border-radius: 10px;
  cursor: default;
}

/* Para cada color de las habilidades */
.skill.Photoshop {
  background-color: #00baff;
}

.skill.Cocina {
  background-color: #ff4b00;
}

.skill.Musica {
  background-color: #5aff00;
}

.skill.Jugar {
  background-color: #ff00a7;
}
</style>
