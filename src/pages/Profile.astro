---
// Importar el layout
import Layout from "../layouts/Layout.astro";
---

<Layout title="Perfil de Usuario">

  <section class="profile-section">
    <h2 class="text-2xl font-bold mb-4 mt-24">Perfil de Usuario</h2>

    <!-- Sección de perfil del usuario -->
    <div class="profile-content">
      <img src="src/img/Image (6).png" alt="Foto de Perfil" class="profile-pic mx-auto" />
      <div class="profile-info">
        <h3 class="text-xl font-semibold">CRISTIAN ECHEVERRY</h3>
        <p>Email: davidecheverry57@gmail.com</p>
        <p>Estado: Activo</p>
        <p>Biografía: Soy un usuario ejemplar</p>
      </div>
    </div>

    <!-- Botón de cierre de sesión -->
    <button class="logout-button" onclick="logout()">Cerrar sesión</button>

    <p id="logout-message"></p>
  </section>

</Layout>

<style>
  /* Estilos del perfil */
  .profile-section {
    padding: 20px;
    text-align: center;
  }

  .profile-pic {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    margin-bottom: 20px;
  }

  .profile-info {
    margin-top: 20px;
  }

  .logout-button {
    background-color: #ff6666;
    border: none;
    color: white;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    margin-top: 20px;
  }

  .logout-button:hover {
    background-color: #ff3333;
  }
</style>

<script>
  function logout() {
    // Función de cierre de sesión simulada
    // En una aplicación real, deberías redirigir al usuario o hacer una solicitud de cierre de sesión
    document.getElementById('logout-message').innerText = 'Has cerrado sesión correctamente.';
  }
</script>
