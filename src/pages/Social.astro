        }
      });

      if (!response.ok) {
        if (response.status === 401) {
          window.location.href = '/login';
          return;
        }
        throw new Error(`HTTP error! status: ${response.status}`);
      }

      const user = await response.json();
      console.log('‚úÖ Usuario cargado:', user);

      if (!user.loggedIn) {
        window.location.href = '/login';
        return;
      }

      currentUser = user;

