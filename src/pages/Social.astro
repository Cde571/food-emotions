      if (quickAvatar) quickAvatar.src = avatarUrl;
      if (userName) userName.textContent = user.username;
      if (userUsername) userUsername.textContent = `@${user.username}`;

      // ‚≠ê ACTUALIZAR STATS (sidebar izquierdo)
