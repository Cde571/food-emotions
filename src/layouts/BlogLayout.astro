---
// BlogLayout.astro
const { title = "Blog", children } = Astro.props;
---

<html lang="es">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
  </head>
  <body>
    <header>
      <h1>{title}</h1>
      <nav>
        <a href="/contribute">Contribute</a>
      </nav>
    </header>
    <main>
      {children}
    </main>
    <footer>
      <a href="/blog">‚Üê Back to Blog</a>
    </footer>
  </body>
</html>

<style>
  body { font-family: Arial, sans-serif; background-color: #f4f4f9; color: #333; }
  h1 { font-size: 2rem; }
</style>
